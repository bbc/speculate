{
  "name": "speculate",
  "private": true,
  "version": "6.0.1",
  "description": "Automatically generates an RPM Spec file for your Node.js project",
  "main": "index.js",
  "scripts": {
    "test": "mocha && npm run lint",
    "lint": "eslint .",
    "coverage": "nyc mocha && nyc report --reporter=html && nyc report --reporter=json-summary",
    "publish:safe": "npx @bbc/iplayer-web-safe-publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/speculate.git"
  },
  "keywords": [
    "spec",
    "rpm",
    "file",
    "node",
    "generate"
  ],
  "author": "ibl-team@lists.forge.bbc.co.uk",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/speculate/issues"
  },
  "homepage": "https://github.com/bbc/speculate#readme",
  "bin": {
    "speculate": "./bin/speculate.js"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "handlebars": "^4.7.7",
    "rimraf": "^4.1.0",
    "tar-fs": "^2.1.1"
  },
  "eslintConfig": {
    "extends": "iplayer",
    "parserOptions": {
      "ecmaVersion": 8
    },
    "rules": {
      "listeners/no-missing-remove-event-listener": 0
    }
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.5.1",
    "eslint": "^8.57.1",
    "eslint-config-iplayer": "^9.4.6",
    "mocha": "^11.7.2",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0"
  },
  "engines": {
    "node": ">=22.18.0"
  }
}