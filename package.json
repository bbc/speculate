{
  "name": "speculate",
  "version": "3.1.2",
  "description": "Automatically generates an RPM Spec file for your Node.js project",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "posttest": "npm run lint",
    "coverage": "istanbul cover _mocha -- -R dot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/speculate.git"
  },
  "keywords": [
    "spec",
    "rpm",
    "file",
    "node",
    "generate"
  ],
  "author": "ibl-team@lists.forge.bbc.co.uk",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/speculate/issues"
  },
  "homepage": "https://github.com/bbc/speculate#readme",
  "bin": {
    "speculate": "./bin/speculate.js"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "handlebars": "^4.7.7",
    "rimraf": "^4.1.0",
    "tar-fs": "^2.1.1"
  },
  "eslintConfig": {
    "extends": "iplayer",
    "parserOptions": {
      "ecmaVersion": 8
    }
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.5.1",
    "eslint": "^8.32.0",
    "eslint-config-iplayer": "^8.0.0",
    "eslint-plugin-mocha": "^10.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^10.2.0",
    "sinon": "^15.0.1"
  },
  "engines": {
    "node": ">=12.22.0"
  }
}
